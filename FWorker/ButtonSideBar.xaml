<UserControl x:Class="FWorker.ButtonSideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FWorker"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="240">
    <Grid Height="100" Width="240" >
        <!-- Create rectange + a half circle-->

        <Border x:Name="btnNavigate"  Background="#FC8E26" Grid.Column="0" CornerRadius="0,50,50,0" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image x:Name="imgSideButton" Source="C:\Users\Docute\Desktop\WIN\FWorker\FWorker\Logo\HomeScreen.png" Height="32" Margin="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Label x:Name="lblContext" Grid.Column="1" Content="Trang chủ" FontSize="25" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Bahnschrift"/>
            </Grid>
        </Border>
        <Button x:Name="HomeScreen" Background="Transparent" Click="Navigate_Click" Opacity="0" BorderThickness="0"></Button>
    </Grid>
</UserControl>
